<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="projekatIspit.Views.ChoosePage"
             Shell.NavBarIsVisible="True"
             xmlns:vm="clr-namespace:projekatIspit.ViewModels">

    <ContentPage.BindingContext>
        <vm:ChoosePageViewModel/>
    </ContentPage.BindingContext>
    
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Padding="10">
            <Label Text="{Binding ApiKeyError}"/>
            <Label Text="Choose a database" Padding="0,0,0,10" HorizontalOptions="Center" FontSize="Title"/>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Button Text="SQLite" Command="{Binding GoToSQLiteProject}"/>
                <Button Text="Api project" Command="{Binding GoToAPIProject}"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>